{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Email API"
  },
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/send-email": {
      "post": {
        "summary": "Sends an email",
        "parameters": [
          {
            "name": "to",
            "in": "body",
            "description": "The email address to send to",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to_name",
            "in": "body",
            "description": "The name to accompany the email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "body",
            "description": "The email address in the from and reply fields",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from_name",
            "in": "body",
            "description": "The name to accompany the from/reply emails",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "subject",
            "in": "body",
            "description": "The subject line of the email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "body",
            "in": "body",
            "description": "The HTML body of the email",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Email sent successfully"
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
